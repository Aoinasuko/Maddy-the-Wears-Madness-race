<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <HediffDef>
    <defName>Maddy_NegativePower</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.2, 0.8, 1.0)</defaultLabelColor>
    <isBad>false</isBad>
    <label>NegativePower</label>
    <description>The amount of negative emotion in the surrounding organism changes its capacity.</description>
    <stages>
      <li>
          <capMods>
            <li>
              <capacity>Moving</capacity>
              <setMax>0.8</setMax>
            </li>
            <li>
              <capacity>Manipulation</capacity>
              <setMax>0.8</setMax>
            </li>
          </capMods>
          <statFactors>
            <IncomingDamageFactor>2.0</IncomingDamageFactor>
            <WorkSpeedGlobal>0.5</WorkSpeedGlobal>
          </statFactors>
      </li>
      <li>
          <minSeverity>50.0</minSeverity>
      </li>
      <li>
          <minSeverity>70.0</minSeverity>
          <capMods>
            <li>
              <capacity>Moving</capacity>
              <offset>0.2</offset>
            </li>
          </capMods>
          <statFactors>
            <WorkSpeedGlobal>1.25</WorkSpeedGlobal>
          </statFactors>
      </li>
      <li>
          <minSeverity>100.0</minSeverity>
          <hungerRateFactorOffset>0.5</hungerRateFactorOffset>
          <capMods>
            <li>
              <capacity>Moving</capacity>
              <offset>0.3</offset>
            </li>
            <li>
              <capacity>Manipulation</capacity>
              <offset>0.3</offset>
            </li>
          </capMods>
          <statFactors>
            <IncomingDamageFactor>0.5</IncomingDamageFactor>
            <WorkSpeedGlobal>1.5</WorkSpeedGlobal>
          </statFactors>
      </li>
      <li>
          <minSeverity>200.0</minSeverity>
          <hungerRateFactorOffset>0.25</hungerRateFactorOffset>
          <capMods>
            <li>
              <capacity>Moving</capacity>
              <offset>0.4</offset>
            </li>
            <li>
              <capacity>Manipulation</capacity>
              <offset>0.4</offset>
            </li>
          </capMods>
          <statFactors>
            <IncomingDamageFactor>0.25</IncomingDamageFactor>
            <WorkSpeedGlobal>2.0</WorkSpeedGlobal>
          </statFactors>
      </li>
      <li>
          <minSeverity>300.0</minSeverity>
          <hungerRateFactorOffset>0</hungerRateFactorOffset>
          <capMods>
            <li>
              <capacity>Moving</capacity>
              <offset>0.5</offset>
            </li>
            <li>
              <capacity>Manipulation</capacity>
              <offset>0.5</offset>
            </li>
            <li>
              <capacity>Consciousness</capacity>
              <offset>0.5</offset>
            </li>
          </capMods>
          <statFactors>
            <IncomingDamageFactor>0.1</IncomingDamageFactor>
            <WorkSpeedGlobal>2.5</WorkSpeedGlobal>
          </statFactors>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>Maddy_NegativePowerEnemy</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.2, 0.8, 1.0)</defaultLabelColor>
    <isBad>true</isBad>
    <label>NegativePower(Enemy)</label>
    <description>This is the state of being affected by the negative emotions that Maddy has accumulated.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1000.0</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
          <minSeverity>100.0</minSeverity>
          <capMods>
            <li>
              <capacity>Moving</capacity>
              <offset>-0.2</offset>
            </li>
            <li>
              <capacity>Manipulation</capacity>
              <offset>-0.2</offset>
            </li>
          </capMods>
          <statFactors>
            <IncomingDamageFactor>1.5</IncomingDamageFactor>
          </statFactors>
      </li>
      <li>
          <minSeverity>200.0</minSeverity>
          <capMods>
            <li>
              <capacity>Moving</capacity>
              <offset>-0.3</offset>
            </li>
            <li>
              <capacity>Manipulation</capacity>
              <offset>-0.3</offset>
            </li>
          </capMods>
          <statFactors>
            <IncomingDamageFactor>2.0</IncomingDamageFactor>
          </statFactors>
      </li>
      <li>
          <minSeverity>300.0</minSeverity>
          <capMods>
            <li>
              <capacity>Moving</capacity>
              <offset>-0.4</offset>
            </li>
            <li>
              <capacity>Manipulation</capacity>
              <offset>-0.4</offset>
            </li>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.4</offset>
            </li>
          </capMods>
          <statFactors>
            <IncomingDamageFactor>3.0</IncomingDamageFactor>
          </statFactors>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>Maddy_SoulBond</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.2, 0.8, 1.0)</defaultLabelColor>
    <isBad>true</isBad>
    <label>SoulBond</label>
    <description>It is a state in which part of the soul is sealed by Maddy's scythe.</description>
    <maxSeverity>150.0</maxSeverity>
    <initialSeverity>15.0</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-30.0</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.1</offset>
            </li>
          </capMods>
      </li>
      <li>
          <minSeverity>50.0</minSeverity>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.3</offset>
            </li>
          </capMods>
      </li>
      <li>
          <minSeverity>90.0</minSeverity>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <setMax>0.1</setMax>
            </li>
          </capMods>
      </li>
    </stages>
  </HediffDef>
  
</Defs>